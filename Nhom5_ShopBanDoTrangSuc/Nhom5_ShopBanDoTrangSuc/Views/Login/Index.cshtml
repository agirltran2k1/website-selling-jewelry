@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid login-banner" style="font-family:Cambria">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <form action="@Url.Action("XlyDangKy")" method="post">
                    <div class="container login-table">
                        <h1 style="text-align:center">ĐĂNG KÝ</h1>
                        
                        <hr />

                        <label for="username"><b>Tài Khoản</b></label>
                        <input type="text" name="username" required />
                        <label for="pass"><b>Mật Khẩu</b></label>
                        <input type="password" name="pass" required />
                        <label for="fullname"><b>Họ Tên</b></label>
                        <input type="text" name="fullname" required />
                        <label for="email"><b>Email</b></label>
                        <input type="text" name="email" required />
                        
                        <input type="submit" value="Register" />
                        

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

